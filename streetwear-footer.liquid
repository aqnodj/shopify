  <div class="footer-container">
    
    <!-- Brand Section -->
    <div class="footer-brand">
      <h2 class="brand-logo">{{ shop.name }}</h2>
      <p class="brand-tagline">{{ settings.streetwear_tagline | default: "Fresh Streetwear. Authentic Style." }}</p>
      
